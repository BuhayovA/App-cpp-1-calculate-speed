void __fastcall TForm2::Edit1Change(TObject *Sender)
{
	double d = StrToFloat(Edit1->Text);
	double t = StrToFloat(Edit2->Text);


	double v = d / t;

	Label4->Caption = L"Ўвидк≥сть =" + FloatToStr(v) + L"м/c";
}
